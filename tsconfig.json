{
  "extends": "@strapi/typescript-utils/tsconfigs/server",
  "compilerOptions": {
    "typeRoots": ["node_modules/@types", "src/@types"],
    "types": ["node", "accepts"],
    "outDir": "dist",
    "rootDir": "."
  },
  "include": [
    "./",
    "./**/*.ts",
    "./**/*.js",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules/",
    "build/",
    "dist/",
    ".cache/",
    ".tmp/",
    "src/admin/",
    "**/*.test.*",
    "src/plugins/**"
  ]
}
